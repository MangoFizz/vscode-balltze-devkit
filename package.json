{
	"name": "balltze-devkit",
	"displayName": "Balltze Devkit",
	"description": "Balltze Devkit is a tool for Halo Custom Edition modding, it provides a set of tools to help you debug, test and develop your mods.",
	"version": "0.0.1",
	"publisher": "shadowmods",
	"private": true,
	"license": "GPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/MangoFizz/vscode-balltze-devkit"
	},
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:json",
		"onLanguage:jsonc"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "balltze-devkit",
					"title": "Balltze Devkit",
					"icon": "media/total_control.svg"
				}
			]
		},
		"views": {
			"balltze-devkit": [
				{
					"id": "tagsExplorer",
					"name": "Tags Explorer",
					"icon": "media/total_control.svg",
					"contextualTitle": "Balltze Devkit"
				},
				{
					"id": "objectsExplorer",
					"name": "Objects Explorer",
					"icon": "media/total_control.svg",
					"contextualTitle": "Balltze Devkit"
				}
			]
		},
		"commands": [
			{
				"command": "tagsExplorer.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "objectsExplorer.refreshEntry",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "objectsExplorer.delete",
				"title": "Delete",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "tagsExplorer.refreshEntry",
					"when": "view == tagsExplorer",
					"group": "navigation"
				},
				{
					"command": "objectsExplorer.refreshEntry",
					"when": "view == objectsExplorer",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "tagsExplorer.spawn",
					"when": "view == tagsExplorer",
					"group": "inline"
				},
				{
					"command": "objectsExplorer.delete",
					"when": "view == objectsExplorer",
					"group": "inline"
				}
			]
		},
		"configuration": [
			{
				"title": "Balltze Devkit",
				"properties": {
					"balltzeDevkit.host": {
						"type": "string",
						"default": "localhost",
						"description": "The host of where the Balltze Devkit server is running."
					},
					"balltzeDevkit.port": {
						"type": "number",
						"default": 19190,
						"description": "The port of where the Balltze Devkit server is running."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint \"src/**/*.ts\""
	},
	"devDependencies": {
		"@types/ftp": "^0.3.33",
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^18",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.73.0",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^8.26.0",
		"typescript": "^5.4.2"
	},
	"dependencies": {
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
